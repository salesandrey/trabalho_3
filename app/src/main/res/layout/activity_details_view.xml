<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        style="@android:style/TextAppearance.DeviceDefault.Large"
                        android:layout_width="match_parent"
                        android:id="@+id/name_title"
                        android:layout_height="wrap_content"
                        android:text="Name Character"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/type_title"
                        android:layout_height="wrap_content"
                        android:text="Character type"></TextView>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/image_center"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/creature"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp">
    </Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ForÃ§a"
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/strength_title"
            android:text=""
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp">
    </Space>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Level"
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/level_title"
            android:text=""
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/level_down"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/background_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/level_up"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/white"
            android:background="@drawable/background_button" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp">
    </Space>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gear"
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/gear_title"
            android:text=""
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gear_down"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/background_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gear_up"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/white"
            android:background="@drawable/background_button" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp">
    </Space>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Modifier"
            android:layout_weight="1"
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/modifier_title"
            android:text=""
            style="@android:style/TextAppearance.DeviceDefault.Large">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modifier_down"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/background_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modifier_up"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/white"
            android:background="@drawable/background_button" />
    </LinearLayout>


    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="deletar jogador" />
</LinearLayout>